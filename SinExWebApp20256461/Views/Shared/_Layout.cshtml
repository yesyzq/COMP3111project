<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SinEx</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SinEx", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <!--<li>@Html.ActionLink("Home", "Index", "Home")</li>-->
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Service<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Cities Served", "Index", "Destinations")</li>
                            <li>@Html.ActionLink("Package Types", "Index", "PackageTypes")</li>
                            <li>@Html.ActionLink("Service Types", "index", "ServiceTypes")</li>
                            <li>@Html.ActionLink("Fees", "index", "ServicePackageFees")</li>
                            <li>@Html.ActionLink("Currencies", "index", "Currencies")</li>
                            <li>@Html.ActionLink("Tracking", "GetTracking", "Trackings")</li>
                            @if (User.IsInRole("Customer"))
                            {
                                <li>@Html.ActionLink("Manage Shipments", "Index", "Shipments")</li>
                                <li>@Html.ActionLink("Saved Addresses", "Index", "SavedAddresses")</li>
                            }
                            @if (User.IsInRole("Employee"))
                            {
                                <li>@Html.ActionLink("Manage Shipments", "Index", "Shipments")</li>
                                <li>@Html.ActionLink("Change Penalty Fee", "Edit", "PenaltyFees", new { id = 1 }, null)</li>
                                <li>@Html.ActionLink("Input Tracking", "Create", "Trackings")</li>
                            }
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Cost", "Costcalculation", "ServicePackageFees")</li>
                    @if (User.IsInRole("Customer") || User.IsInRole("Employee"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Reports<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Shipping History", "GenerateHistoryReport", "Shipments", new { FirstClick = 1 }, null)</li>
                                <li>@Html.ActionLink("Invoice History", "GenerateInvoiceReport", "Shipments", new { FirstClick = 1 }, null)</li>
                            </ul>
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Sino Express</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
